<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>legal</key>

    <view>pages/legal</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>

    <meta>
        <title lang="en">Legal document</title>
        <title lang="fr">Document legal</title>
    </meta>

    <properties>

        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="fr">Titre</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="label" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Menu label</title>
                <title lang="fr">Label du menu</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="fr">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <property name="content" type="text_editor" mandatory="true">
            <meta>
                <title lang="fr">Contenu</title>
                <title lang="en">Content</title>
            </meta>
        </property>

    </properties>

</template>